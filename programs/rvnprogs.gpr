project Rvnprogs is

   for Source_Dirs use ("src", "../src/**");
   for Object_Dir use "obj";
   for Main use ("packrvn.adb", "xrvn.adb");
   for Languages use ("Ada", "C");

   package Linker is
      for Switches ("ada") use ("-lzstd_pic", "-lblake3_pic", "-lucl_pic", "-lm");
   end Linker;

   package Compiler is
      for Switches ("ada") use ("-gnato", "-fstack-check", "-gnatVa", "-gnatwae", "-gnatyABIM100abcdefiklnpx");
   end Compiler;

end Rvnprogs;

